<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/appPrimaryColor</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <style name="BackgroundImageBackdrop">
        <item name="android:alpha">0.85</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/shape_image_holder_text</item>
<!--        <item name="android:src">@drawable/img_background</item>-->
    </style>

    <style name="keyboard_key_style">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/delete_key</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">24.5dp</item>
        <item name="android:paddingEnd">24.5dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:onClick">onKeyPressed</item>
    </style>

    <style name="keyboard_delete_key_style">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/delete_key</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">24.5dp</item>
        <item name="android:paddingEnd">24.5dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:onClick">onDeleteKeyPressed</item>
        <item name="android:src">@drawable/ic_clear</item>
    </style>
</resources>
